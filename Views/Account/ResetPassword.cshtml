@inject Microsoft.Extensions.Configuration.IConfiguration Configuration

@model dynamic

@{
    ViewData["Title"] = "Reset Password";
    var hCaptchaSiteKey = Configuration["Supabase:HCaptchaSiteKey"];
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="w-100" style="max-width: 400px;">
        <h2 class="text-center mb-4">Reset Password</h2>

        <form asp-action="ResetPassword" method="post">
            <input type="hidden" name="accessToken" value="@ViewData["AccessToken"]" />
            <div class="form-group mb-3">
                <label for="newPassword">New Password</label>
                <input type="password" id="newPassword" name="newPassword" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <div class="h-captcha" data-sitekey="@hCaptchaSiteKey"></div>
                <input type="hidden" id="captchaToken" name="captchaToken" />
            </div>
            <button type="submit" class="btn btn-primary w-100">Reset Password</button>
        </form>

        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger mt-3">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://js.hcaptcha.com/1/api.js" async defer></script>
    <script>
        window.errorMessage = '@TempData["ErrorMessage"]';
        window.successMessage = '@TempData["SuccessMessage"]';
    </script>
    <script src="~/js/reset-password.js" asp-append-version="true"></script>
}