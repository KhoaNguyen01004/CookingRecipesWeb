<div class="recipe-form-section">
    <div class="section-title">Categories & Area</div>
    <div class="form-group">
        <label>Categories</label>
        <div class="d-flex align-items-center mb-2">
            <div id="categories-available" class="categories-grid flex-grow-1"></div>
            <button type="button" id="add-category-btn" class="btn btn-outline-primary ms-2"
                style="min-height: 44px; min-width: 44px;">
                <i class="fas fa-plus"></i>
                <span class="d-none d-sm-inline ms-1">Add Category</span>
            </button>
        </div>
        <div id="selected-categories-display" class="selected-chips"></div>
        <small class="form-text text-muted">Tap to select categories for your recipe</small>
    </div>
    <div class="form-group">
        <label>Areas</label>
        <div id="areas-available" class="options-grid mb-2"></div>
        <div id="areas-selected" class="selected-chips"></div>
        <small class="form-text text-muted">Select the origin or nationality of this dish</small>
    </div>
</div>