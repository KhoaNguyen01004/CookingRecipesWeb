@model CookingRecipesWeb.Models.ManageRecipesViewModel

@{
    ViewData["Title"] = "Manage Recipes";
}

<div class="container">
    <h1 class="my-4">Manage Recipes</h1>

    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary mb-3">Back to Dashboard</a>
    <a href="@Url.Action("CreateRecipe", "Admin")" class="btn btn-primary mb-3">Create New Recipe</a>

    <h3 class="my-4">API Recipes (View Only)</h3>
    <div class="mb-3">
        <a href="@Url.Action("ManageRecipes", "Admin", new { refresh = true })" class="btn btn-outline-primary">ðŸ”„ Refresh API Recipes</a>
    </div>
    <div class="row" id="api-recipes-container">
        @if (Model.ApiRecipes != null && Model.ApiRecipes.Any())
        {
            @foreach (var recipe in Model.ApiRecipes)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="@(recipe.StrMealThumb ?? "/images/default-recipe.jpg")" class="card-img-top" alt="@(recipe.StrMeal ?? "Recipe")" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@(recipe.StrMeal ?? "Unknown Recipe")</h5>
                            <p class="card-text">@(recipe.StrCategory ?? "Unknown") - @(recipe.StrArea ?? "Unknown")</p>
                            <div class="mt-auto">
                                <span class="badge badge-info">API Recipe</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p>No API recipes found.</p>
            </div>
        }
    </div>

    <h3 class="my-4">Database Recipes (Manageable)</h3>
    <div class="row" id="db-recipes-container">
        @if (Model.DbRecipes != null && Model.DbRecipes.Any())
        {
            @foreach (var recipe in Model.DbRecipes)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="@(recipe.StrMealThumb ?? "/images/default-recipe.jpg")" class="card-img-top" alt="@(recipe.StrMeal ?? "Recipe")" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@(recipe.StrMeal ?? "Unknown Recipe")</h5>
                            <p class="card-text">@(recipe.StrCategory ?? "Unknown") - @(recipe.StrArea ?? "Unknown")</p>
                            <div class="mt-auto">
                                <a href="@Url.Action("EditRecipe", "Admin", new { id = recipe.Id })" class="btn btn-warning btn-sm">Edit</a>
                                <a href="@Url.Action("DeleteRecipe", "Admin", new { id = recipe.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this recipe?')">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p>No database recipes found.</p>
            </div>
        }
    </div>
</div>
