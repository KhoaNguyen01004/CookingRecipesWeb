<div class="recipe-form-section">
    <div class="section-title">Ingredients</div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <input type="text" class="form-control" id="ingredient-input" placeholder="Ingredient name" />
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control" id="measure-input" placeholder="Measure (e.g., 1 cup)" />
            </div>
            <div class="col-md-2">
                <button type="button" id="add-ingredient-btn" class="btn btn-outline-primary w-100">Add</button>
            </div>
        </div>
        <small class="form-text text-muted">Add ingredients with their measurements</small>
        <div id="ingredients-tags" class="mt-2"></div>
    </div>

    <!-- Hidden fields for form submission -->
    <input type="hidden" id="ingredients-list" name="StrIngredients" />
    <input type="hidden" id="measures-list" name="StrMeasures" />
</div>