@model IEnumerable<CookingRecipesWeb.Models.FavoriteViewModel>

@{
    ViewData["Title"] = "Manage Favorites";
}

<div class="container">
    <h1 class="my-4">Manage Favorites</h1>

    @if (TempData["Success"] != null)
    {
        <script>
            window.successMessage = '@TempData["Success"]';
        </script>
    }

    @if (TempData["Error"] != null)
    {
        <script>
            window.errorMessage = '@TempData["Error"]';
        </script>
    }

    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var favoriteViewModel in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="@favoriteViewModel.Recipe.StrMealThumb" class="card-img-top"
                            alt="@favoriteViewModel.Recipe.StrMeal" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@favoriteViewModel.Recipe.StrMeal</h5>
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("RecipeDetails", "Home", new { id = favoriteViewModel.Favorite.RecipeId })"
                                    class="btn btn-info btn-sm">View Recipe</a>
                                <form method="post" action="@Url.Action("RemoveFavorite", "Admin")" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="userId" value="@favoriteViewModel.Favorite.UserId" />
                                    <input type="hidden" name="recipeId" value="@favoriteViewModel.Favorite.RecipeId" />
                                    <button type="submit" class="btn btn-danger btn-sm"
                                        onclick="return confirm('Are you sure you want to remove this favorite?')">Remove</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info" role="alert">
                    No favorites found.
                </div>
            </div>
        }
    </div>
</div>