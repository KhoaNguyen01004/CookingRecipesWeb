@model IEnumerable<CookingRecipesWeb.Models.Favorite>

@{
    ViewData["Title"] = "Manage Favorites";
}

<div class="container">
    <h1 class="my-4">Manage Favorites</h1>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>All Favorites</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>User ID</th>
                                <th>Recipe ID</th>
                                <th>Recipe Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var favorite in Model)
                                {
                                    <tr>
                                        <td>@favorite.UserId</td>
                                        <td>@favorite.RecipeId</td>
                                        <td>@favorite.RecipeId</td>
                                        <td>
                                            <a href="@Url.Action("RecipeDetails", "Home", new { id = favorite.RecipeId })" class="btn btn-info btn-sm">View Recipe</a>
                                            <form method="post" action="@Url.Action("RemoveFavorite", "Admin")" style="display: inline;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="userId" value="@favorite.UserId" />
                                                <input type="hidden" name="recipeId" value="@favorite.RecipeId" />
                                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to remove this favorite?')">Remove</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4">No favorites found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
